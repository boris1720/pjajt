<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Psajt</title>
    <% include partials/scripts.ejs %>
</head>

<body class="stretched dark">

<!-- Document Wrapper
============================================= -->
<div id="wrapper" class="clearfix">


    <% include header.ejs %>

    <!-- Page Title
    ============================================= -->
    <section id="page-title">

        <div class="container clearfix">
            <h1>Novosti</h1>
            <span>Psihodeliƒçno</span>

        </div>

    </section><!-- #page-title end -->

    <!-- Content
    ============================================= -->
    <section id="content">

        <div class="content-wrap">

            <div class="container clearfix">

                <!-- Posts
                ============================================= -->
                <div id="posts" class="post-grid grid-container clearfix" data-layout="fitRows">

                    <% if (data) { %>
                    <% data.forEach(function(vesti){ %>
                    <div class="entry clearfix">
                        <div class="entry-image">
                            <img class="image_fade" src="<%= vesti.img %>" alt="Standard Post with Image">
                        </div>
                        <div class="entry-title">
                            <h2><a href="/novosti/<%= vesti.novosti_id %>"><%= vesti.title %></a></h2>
                        </div>
                        <ul class="entry-meta clearfix">
                            <li><i class="icon-calendar3"></i> 26. apr 2018.</li>
                            <li><a href="blog-single.html#comments"><i class="icon-comments"></i> 13</a></li>
                            <li><a href="#"><i class="icon-camera-retro"></i></a></li>
                        </ul>
                        <div class="entry-content">
                            <p><%- vesti.description.slice(0,100) %>...</p>
                            <a href="/novosti/<%= vesti.novosti_id %>"class="more-link">Read More</a>
                        </div>
                    </div>

                    <% }) %>
                    <% } %>

                </div><!-- #posts end -->



            </div>

        </div>

    </section><!-- #content end -->



</div><!-- #wrapper end -->

<!-- Go To Top
============================================= -->
<div id="gotoTop" class="icon-angle-up"></div>

<!-- External JavaScripts
============================================= -->
<script src="js/jquery.js"></script>
<script src="js/plugins.js"></script>

<!-- Footer Scripts
============================================= -->
<script src="js/functions.js"></script>

</body>

</html>